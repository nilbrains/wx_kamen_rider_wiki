.container {
  box-sizing: border-box;
  padding: 10px;
  background-color: #f7f7f7;
}
.rider_box {
  margin: 0 1rem;
}
.banner {
  margin-bottom: 1em;
  height: 150px;
  border-radius: 10px;
  overflow: hidden;
  background-color: #d2ebf8;
}
.adddddd {
  height: 150px;
}

.banner image {
  width: 100%;
  height: 100%;
}

.coming {
  display: flex;
  justify-content: space-between;
}

.coming-item {
  flex-basis: 48%;
  position: relative;
  box-sizing: border-box;
}

.coming-item image {
  width: 100%;
  border-radius: 10px;
  height: 100px;
}
.coming-item .tag {
  position: absolute;
  top: 0;
  padding: 2px 10px;
  background-color: #4d90fe;
  color: #fff;
  border-radius: 10px 0 10px 0;
  font-size: 13px;
  letter-spacing: 5px;
  text-align: center;
}

.coming-item .tag.coming-tag {
  background-color: #f9c01d;
  color: #fff;
}

.coming-item .title {
  box-sizing: border-box;
  position: absolute;
  bottom: 5px;
  font-size: 12px;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  color: #fff;
  border-radius: 0 0 10px 10px;
  padding: 10px 5px;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.rider-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.rider-item {
  flex-grow: 1;
  flex-basis: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background-color: #fff;
  padding: 10px;
  margin: 5px;
  box-sizing: border-box;
  border-radius: 8px;
  
  box-shadow: 4px 4px 10px 0px #ccc;
}

.rider-item image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.rider-item .name {
  font-size: 12px;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ad {
  box-shadow: 4px 4px 10px 0px #ccc;
  border-radius: .5rem;
  margin: 5px;
  background-color: #fff;
  width: 100%;
}
.ad .addd {
  width: 100% !important;
  margin: 0 auto;
  background-color: #fff;
}

.rider-icon {
  width: 24px;
  height: 24px;
  background: #1296db;
  font-size: 0px;
  border-radius: 5px;
}
.adtop {
  margin-bottom: 2em;
}