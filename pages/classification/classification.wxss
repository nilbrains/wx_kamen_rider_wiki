
page{
  background-color: #FFFFFF;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.tab-content {
  width: 100%;
}

.rider-content{
  display: flex;
  flex-direction: column;
  padding: 0 6vw;
}

.rider-content .rider{
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  align-items: center;
  padding: 2vw;
  border-radius: 8px;
  background-color: #f2f2fa;
  box-shadow: 4px 4px 20px 0px #ccc;
  margin: .5rem 0;
  position: relative;
}

.rider-content .rider .rider-logo{
  width: 100px;
  height: 100px;
  margin-right: .4rem;
}

.rider-content .rider .rider-con{
  flex-grow: 1;
  align-self:stretch;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: relative;
}

.rider-content .rider .rider-con .rider-ttl__mini{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: .4;
}
.rider-content .rider .rider-con .rider-name{
  font-size: 1.5rem;
  z-index: 3;
}

.rider-content .rider .rider-con .rider-years{
  color: rgb(50, 204, 243);
  margin-top: 1.5rem;
  z-index: 3;
}

.rider-content .rider .rider-icon__mini{
  position: absolute;
  width: 50px;
  height: 50px;
  top: 0;
  left: 0;
}