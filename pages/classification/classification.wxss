
page{
  background-color: #FFFFFF;
  height: 100%;
}

.weui-tabs-bar__wrp {
  border-bottom: 1px solid #eee;
  margin-top: 10px;
}

.weui-tabs-swiper {
  width: 100%;
  height: 100vh;
}

.tab-content {
  width: 100%;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}

.rider-content{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  padding: 0 6vw;
}

.rider-content .rider{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 2vw;
  border-radius: 8px;
}

.rider-content .rider .rider-logo{
  width: 40vw;
  height: 40vw;
}

.rider-content .rider .rider-name{
  font-size: 18px;
}