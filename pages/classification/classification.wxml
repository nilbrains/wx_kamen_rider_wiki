<view class="loading" wx:if="{{isLoading}}">
	<image class="loading__icon" src="/assets/images/loading.gif"></image>
</view>
<view class="container">
	<van-tabs active="{{activeTab}}" animated bind:change="onChange" sticky="{{true}}">
		<van-tab wx:for="{{tabs}}" wx:key="index" title="{{item.title}}" color="#209cdd" style="height:{{tabSwiperHeight}}px">
			<view class="rider-content tab-content-{{index}}">
				<block wx:for="{{contents[index]}}" wx:for-item="it" wx:key="index">
					<view class="rider" bindtap="toRiderInfoPage" bindlongpress="showImg" data-ridersrc="{{it.pic}}"
						data-riderId="{{it.rider_id}}" data-haveinfo="{{it.haveInfo}}">
						<van-image custom-class="rider-logo" src="{{it.pic}}" fit="contain" lazy-load use-loading-slot use-error-slot>
							<van-loading slot="loading" type="spinner" size="20" vertical />
							<text slot="error">图片失踪了</text>
						</van-image>
						<text class="rider-name">{{it.name}}</text>
					</view>
				</block>
			</view>
			<van-empty wx:if="{{contents[index].length===0}}" description="内容为空"></van-empty>
		</van-tab>
	</van-tabs>
</view>