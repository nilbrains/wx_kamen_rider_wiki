<view class="loading" wx:if="{{isLoading}}">
	<image class="loading__icon" src="/assets/images/loading.gif"></image>
</view>
<view class="container">
	<!-- 个人资料 -->
	<view class="profile">
		<image src="/assets/images/bg.jpg" class="profile-cover"></image>
		<view class="meta">
			<open-data class="avatar" type="userAvatarUrl"></open-data>
			<open-data class="nickname" type="userNickName"></open-data>
		</view>
	</view>
	<view class="count">
		<view class="cell">{{pyb}} <text>Py币</text> </view>
		<view class="cell" bindtap="toSginIn"> {{days}} <text
				class="sginIn {{isSginIn==true?'on':''}}">{{isSginIn?'已打卡':'打卡'}}</text> </view>
	</view>
	<view class="extra">
		<van-cell-group title="反馈">
			<button open-type="contact" class="item">联系我</button>
		</van-cell-group>
	</view>
	<view class="footer">
		<text>版本 {{version}}</text>
	</view>
</view>