<!--index.wxml-->
<wxs src="../../utils/filter.wxs" module="filter" />
<view class="loading" wx:if="{{isLoading}}">
	<image class="loading__icon" src="/assets/images/loading.gif"></image>
</view>
<view class="container">
	<view class="top-swiper">
		<swiper indicator-dots="{{false}}" autoplay="{{true}}" interval="2000" circular="{{true}}">
			<block wx:for="{{topImages}}" wx:key="index">
				<swiper-item>
					<image mode="scaleToFill" class="swiper-full-img" src="{{item}}"></image>
				</swiper-item>
			</block>
			<swiper-item wx:if="{{topImages.length===0}}">
				<image mode="scaleToFill" class="swiper-full-img" src="/assets/images/top.jpg"></image>
			</swiper-item>

		</swiper>
	</view>
	<van-notice-bar wx:if="{{notice!=''}}" scrollable mode="closeable" left-icon="volume-o" text="{{notice}}" />
	<view class="articles">
		<view class="list">
			<block wx:for="{{articleList}}" wx:key="index">
				<view class="note-flow {{item.haveImg!='0' ? 'have-img' :''}}" bindtap="toArticleInfoPage"
					data-articleId="{{item.content_md}}">
					<view class="content">
						<view class="wrap-img" style="width: 80px; height: 80px;" wx:if="{{item.haveImg!='0'}}">
							<image src="{{item.showImg}}" style="width: 80px; height: 80px;"></image>
						</view>
						<view class="summary">
							<text class="title">
								{{item.title}}
							</text>
							<text class="abstract">{{item.abstract}}</text>
						</view>
					</view>
					<view class="meta oneline">
						<text class="name">{{item.name}}</text> <text class="time">{{filter.dateFormatStr(item.time)}}</text>
					</view>
				</view>
			</block>
		</view>
	</view>
</view>